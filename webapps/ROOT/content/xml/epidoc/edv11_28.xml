                            <lb n="1"/>secr[...]
          <lb n="2"/>danati p(er) div(er)si pecch[ati]
          <lb n="3"/><w>micidiario</w>
          <lb n="4"/>tavern<m type="desinence" subtype="ARIUM">aro</m>
